<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen_forgot"
    android:orientation="vertical"
    android:background="#f7f8f0">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot password"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="@font/vollkkorn"
        android:gravity="center"/>
    <EditText
        android:id="@+id/edt_forgot_user"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext"
        android:layout_marginTop="10dp"
        android:hint="ENTER USERNAME"
        android:textColor="#545454"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="100">


    </LinearLayout>
    <Button
        android:id="@+id/btn_forgot_send"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="SEND NEW PASSWORD"
        android:textColor="@color/black"
        android:background="@drawable/hcn"
        app:backgroundTint="#f5caaf"
        android:textStyle="bold|italic"
        android:textSize="14dp"
        />
    <Button
        android:id="@+id/btn_forgot_Exit"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="EXIT"
        android:textSize="25dp"
        app:backgroundTint="#969292"
        android:background="@drawable/hcn"
        android:layout_marginTop="12dp"
        android:textStyle="bold|italic"
        />
</LinearLayout>