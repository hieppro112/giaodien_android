<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8f0"
    android:orientation="vertical"
    tools:context=".screen_home">

    <!--header-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="left"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="108dp"
            android:layout_height="115dp"
            android:background="@drawable/logo" />

        <ImageView
            android:id="@+id/btnnotifycations"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_marginStart="200dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/btn_notifycations" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_room_ext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/exit"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="50dp"
        android:text="THÔNG TIN CHI TIẾT"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:textSize="25dp"
         />

    <ImageView
        android:id="@+id/img_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:scaleType="centerCrop"
        android:background="@drawable/banner_1_romm"
        android:orientation="vertical"
        android:padding="16dp"
/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginStart="50dp"
            android:id="@+id/maphong_chitiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Thông tin"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/luotdat_chitiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="40dp"
            android:text="Thông tin"
            android:layout_marginStart="110dp"
            android:textSize="18sp"
            android:textColor="#C74B4B"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Thông tin"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Địa chỉ: 76 Ngô Quyền Hồ Chí Minh"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/content_chittiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Trạng thái: Còn phòng"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Đánh giá: ★★★★☆"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/giaphong_chitiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1sp"
            android:text="Giá tiền: 629000 VND/ tháng"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btn_chitietsp_cart"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#c87b37"
            android:gravity="center"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cart"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#37c8c3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:text="Đặt Phòng" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>